{% extends 'base.html.twig' %}


{% block title %} {{ title }} {% endblock %}


{% block stylesheets %}

        {{ encore_entry_link_tags('custom') }}

{% endblock %}

{% block body %}

{% for flash_error in app.flashes('verify_email_error') %}

    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>

{% endfor %}

<div class="d-flex container">
    <div class="center-element" id="box-1">
        <section class="container col-8 mt-4">
            <div class="row mt-3">
                <div class="col mt-3">
    
            <h4>Inscription</h4>
            
                <fieldset class="my-3">
                    <legend>Remplissez les champs</legend>
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.nom_utilisateur) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.conditions) }}
                </fieldset>
            <div class="alert alert-danger text-center mt-3 p-1" role="alert">
                    <button type="submit" class="btn">S'inscrire</button>
                    {{ form_end(registrationForm) }}
            </div>
                </div>
            </div>
        </section>
    </div>


        <!-- *******************    LOGIN   ******************** -->


    <div class="col-5 mt-5" id="box-2">

        <form method="post" class="container col-10 center-element">

            {% if error %}

                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>

            {% endif %}
    
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
    
            <h1 class="h3 mb-3 font-weight-normal">Veuillez vous authentifier</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
    
    
                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}
    
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
    
    
            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </form>
    </div>
</div>
{% endblock %}
