{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<section class="container col-4 mt-3">
    <div class="row mt-3">
        <div class="col mt-3">
        
    <h1>Inscription</h1>
        <fieldset class="my-3">
            <legend>Remplissez les champs</legend>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nom_utilisateur) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.conditions) }}
        </fieldset>
    <div class="alert alert-danger text-center mt-3 p-1" role="alert">
            <button type="submit" class="btn">S'inscrire</button>
            {{ form_end(registrationForm) }}
    </div>
        </div>
    </div>
</section>
{% endblock %}
