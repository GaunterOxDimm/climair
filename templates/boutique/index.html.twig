{% extends 'base.html.twig' %}

{% block head %}
    
    <link rel="apple-touch-icon" href="assets/img/apple-icon.png">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/templatemo.css">
    <link rel="stylesheet" href="assets/css/custom.css">

    <!-- Load fonts style after rendering the layout styles -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href="assets/css/fontawesome.min.css">

     <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
  <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
  <script>
  $( function() {
    $( "#accordion" ).accordion();
  } );
  </script>
{% endblock %}
{% block body %}



    <!-- Start Content -->
    <div class="container py-5">
        <div class="row">

            <div class="col-lg-3">
                <h1 class="h2 pb-4">Categories</h1>
                <ul class="list-unstyled templatemo-accordion">
                    <li class="pb-3">
                        <a class="collapsed d-flex justify-content-between h3 text-decoration-none" href="#">
                            Mitsubishi
                            <i class="fa fa-fw fa-chevron-circle-down mt-1"></i>
                        </a>
                        <ul class="collapse show list-unstyled pl-3">
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 1})}}">Froid</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 2})}}">Chaud</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 3})}}">Réversible</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 4})}}">Multi-Split / Unité Extérieure</a></li>
                        </ul>
                    </li>
                    <li class="pb-3">
                        <a class="collapsed d-flex justify-content-between h3 text-decoration-none" href="#">
                            Atlantic
                            <i class="pull-right fa fa-fw fa-chevron-circle-down mt-1"></i>
                        </a>
                        <ul class="collapse show list-unstyled pl-3">
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 5})}}">Froid</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 6})}}">Chaud</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 7})}}">Réversible</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 8})}}">Multi-Split / Unité Extérieure</a></li>
                        </ul>
                    </li>
                    <li class="pb-3">
                        <a class="collapsed d-flex justify-content-between h3 text-decoration-none" href="#">
                            Airwell
                            <i class="pull-right fa fa-fw fa-chevron-circle-down mt-1"></i>
                        </a>
                        <ul class="collapse show list-unstyled pl-3">
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 9})}}">Froid</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 10})}}">Chaud</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 11})}}">Réversible</a></li>
                            <li><a class="text-decoration-none" href="{{path("boutique_select", {id: 12})}}">Multi-Split / Unité Extérieure</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        
{% set articlesPerPage = 9 %}
{% set articleBatches = articles|batch(articlesPerPage) %}
{% set currentPage = app.request.query.get('page', 1) %}
            <div class="col-lg-9">

                <div class="row">
                {% if articleBatches %}

                    {% for article in articleBatches[currentPage-1] %}
                    <div class="col-md-4">
                        <div class="card mb-4 product-wap rounded-0">
                            <div class="card rounded-0">
                                <img class="card-img rounded-0 img-fluid" src="/assets/img_article_directory/{{ article.getImgArticle }}">
                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                    <ul class="list-unstyled">
                                        <li><a class="btn btn-success text-white" href="#"><i class="far fa-heart"></i></a></li>
                                        <li><a class="btn btn-success text-white mt-2" href="{{path('article_index', {id: article.id})}}"><i class="far fa-eye"></i></a></li>
                                       {% if article.getStock > 0 %}
                                        <li><a class="btn btn-success text-white mt-2" href="{{path('cart_add_article', {id: article.id})}}"><i class="fas fa-cart-plus"></i></a></li>
                                       {% endif %}
                                    </ul>
                                </div>
                            </div>
                        
                            <div class="card-body text-center">
                                <a href="shop-single.html" class="h3 text-decoration-none"> {{ article.getNomArticle }} </a>
                                <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                    <li class="pt-2">
                                        <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                        <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                        <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                        <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                        <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                    </li>
                                </ul>
                                
                                <p class="text-center mb-0"> {{ article.getPrixArticle / 100 }} €</p>
                                    {% if article.getStock > 0 %}
                                    <p class="text-center mb-0"> Il reste {{ article.getStock }} articles en stock.</p>
                                    {% else %}
                                    <p class="text-center mb-0"> Article indisponible.</p>
                                    {% endif %}
                            </div>
                        </div>      
                    </div> 
                    {% endfor %}
                    {% else %}
                    <p>Aucun article à afficher.</p>
                    {% endif %}
                </div>
            </div>
        </div>
                <!-- Affichage de la pagination -->
            <div div="row">
                <ul class="pagination pagination-lg justify-content-end">
                    {% for page in 1..articleBatches|length %}
                        {% if page == currentPage %}
                            <li class="page-item active">
                                <span class="page-link">{{ page }}</span>
                            </li>
                        {% else %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('boutique_index', {page: page}) }}">{{ page }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% block javascripts %}
    <script src="assets/js/jquery-1.11.0.min.js"></script>
    <script src="assets/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/templatemo.js"></script>
    <script src="assets/js/custom.js"></script>
    {% endblock %}
{% endblock %}
