{% extends 'base.html.twig' %}

{% block title %} Article {% endblock %}

{% block body %}

 <!-- Open Content -->
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" src="/assets/img_article_directory/{{ articleChoisi.getImgArticle}}" alt="{{articleChoisi.getNomArticle}}" id="product-detail">
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <main>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <h1><strong>{{ articleChoisi.getNomArticle }} </strong></h1>
                                    </li>
                                    <li class="list-inline-item">
                                        <h2><strong>Prix: {{ articleChoisi.getPrixArticle }}€ </strong></h2>
                                    </li>
                                </ul>
                                <h2>Description:</h2>
                                <p> {{ articleChoisi.getDescriptionArticle}} </p>
                            </main>
                            <form action="" method="GET">
                                <input type="hidden" name="product-title" value="Activewear">
                                <div class="row pb-3">
                                    <div class="col d-grid">
                                        <a type="submit" class="btn btn-success btn-lg" name="submit" href="{{path('cart_add_article', {id: articleChoisi.id})}}" value="addtocard">Add To Cart</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Close Content -->

    <!-- Start Articles -->
    <section class="py-5">
        <div class="container">
            <div class="row text-left p-2 pb-3">
                <h3>Related Products</h3>
            </div>
            <!--Start Carousel Wrapper-->
            <div id="carousel-related-product">
                {% for article in articles %}
                <div class="p-2 pb-3">
                    <div class="product-wap card rounded-0">
                        <div class="card h-100 rounded-0">
                            <img class="card-img rounded-0 img-fluid" src="/assets/img_article_directory/{{ article.getImgArticle }}" alt="{{articleChoisi.getNomArticle}}">
                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-cente justify-content-center">
                                <ul class="list-unstyled">
                                    <li><a class="btn btn-success text-white mt-2" href="{{path('article_index', {id: article.id})}}"><i class="far fa-eye"></i></a></li>
                                    <li><a class="btn btn-success text-white mt-2" href="{{path('cart_add_article', {id: article.id})}}"><i class="fas fa-cart-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body text-center">
                            <a href="{{path('article_index', {id: article.id})}}" class="text-decoration-none"> {{ article.getNomArticle }} </a>
                            <p class="text-center mb-0">{{ article.getPrixArticle }}€</p>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>
    <!-- End Article -->
    
{% block javascripts %}

     <!-- Start Slider Script -->
    <script src="/assets/js/slick.min.js"></script>
    <script src="/assets/js/carousel_category.js"></script>
    <!-- End Slider Script -->
{% endblock %}

{% endblock %}
