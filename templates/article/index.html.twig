{% extends 'base.html.twig' %}

{% block title %} Article {% endblock %}



{% block body %}


   



 <!-- Open Content -->
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" src="/assets/img_article_directory/{{ articleChoisi.getImgArticle}}" alt="Card image cap" id="product-detail">
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Article</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p><strong>{{ articleChoisi.getNomArticle }} </strong></p>
                                </li>
                            </ul>

                            <h6>Description:</h6>
                            <p> {{ articleChoisi.getDescriptionArticle}} </p>

                            <form action="" method="GET">
                                <input type="hidden" name="product-title" value="Activewear">
                                <div class="row">
                                    
                                  
                                </div>
                                <div class="row pb-3">
                                    
                                    <div class="col d-grid">
                                        <a type="submit" class="btn btn-success btn-lg" name="submit" href="{{path('cart_add_article', {id: articleChoisi.id})}}" value="addtocard">Add To Cart</a>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Close Content -->

    <!-- Start Articles -->
    <section class="py-5">
        <div class="container">

            <div class="row text-left p-2 pb-3">
                <h4>Related Products</h4>
            </div>

            <!--Start Carousel Wrapper-->
            <div id="carousel-related-product">

                {% for article in articles %}
                <div class="p-2 pb-3">
                    <div class="product-wap card rounded-0">
                        <div class="card h-100 rounded-0">
                            <img class="card-img rounded-0 img-fluid" src="/assets/img_article_directory/{{ article.getImgArticle}}">
                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                <ul class="list-unstyled">
                                    <li><a class="btn btn-success text-white mt-2" href="{{path('article_index', {id: article.id})}}"><i class="far fa-eye"></i></a></li>
                                    <li><a class="btn btn-success text-white mt-2" href="{{path('cart_add_article', {id: article.id})}}"><i class="fas fa-cart-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body text-center">

                            <a href="{{path('article_index', {id: article.id})}}" class="text-decoration-none"> {{ article.getNomArticle }} </a>
                            <p class="text-center mb-0"> {{ article.getPrixArticle }} â‚¬ </p>

                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>
    <!-- End Article -->
    
{% block javascripts %}

     <!-- Start Slider Script -->
    <script src="/assets/js/slick.min.js"></script>
    <script>
        $('#carousel-related-product').slick({
            infinite: true,
            arrows: false,
            slidesToShow: 4,
            slidesToScroll: 3,
            dots: false,
            responsive: [{
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                }
            ]
        });
    </script>
    <!-- End Slider Script -->
{% endblock %}

{% endblock %}
