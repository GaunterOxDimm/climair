{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}
{% block body %}
    <section class="bg-light p-3">
        <h1>Votre panier</h1>
    </section>

    <table class="table">
        <thead>
            <tr>
                <th class="text-end">Image</th>
                <th class="text-end">Article</th>
                <th class="text-end">Prix</th>
                <th class="text-end">Quantité</th>
                <th class="text-end">Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}
                <tr>
                    <td class="col-2 text-center"><img class="col-5" src="/assets/img_article_directory/{{ element.article.getImgArticle }}" alt="chcah"></td>
                    <td class="text-end">{{ element.article.getNomArticle }}</td>
                    <td class="text-end">{{ element.article.getPrixArticle }} €</td>
                    <td class="text-end">{{ element.quantite }}</td>
                    <td class="text-end">{{ element.quantite * element.article.getPrixArticle }} €</td>
                    <td>
                        <a href="{{ path("panier_add", {id: element.article.id}) }}" class="btn btn-success">
                            <i class="bi bi-cart-plus"></i>
                        </a>
                        <a href="{{ path("panier_remove", {id: element.article.id}) }}" class="btn btn-warning">
                            <i class="bi bi-eraser-fill"></i>
                        </a>
                        <a href="{{ path("panier_delete", {id: element.article.id}) }}" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
              
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
        
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td class="text-end">{{ total }}</td>
                <td>
                    <a href="{{ path("panier_delete_all")}}" class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>
        </tfoot>
    </table>
